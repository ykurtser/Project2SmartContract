<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="90dp"/>


    <Button
        android:id="@+id/deliveryGuyBt"
        style="@style/Button"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:text="carrier" />

    <Button
        android:id="@+id/buyerSellerBt"
        style="@style/Button"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:text="Buyer/Seller" />

    <Button
        android:id="@+id/carrierManagerBt"
        style="@style/Button"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:text="Carrier Company Manager" />

    <Button
        android:id="@+id/disputeResolverBt"
        style="@style/Button"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:text="Dispute Resolver" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPackages">

    <Spinner
        android:id="@+id/pkgsSpinner"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/showPkgBt"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show details" />

        <Button
            android:id="@+id/myPkgsCopyClpbrd"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="copy addr" />
    </LinearLayout>

    <Button
        android:id="@+id/myPkgsSendFundsBt"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send funds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2000">

        <Spinner
            android:id="@+id/trajectorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/PKGBuyerAddrText"
            android:layout_width="381dp"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/PKGSellerAddrText"
            android:layout_width="381dp"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/PKGCarrierAddrText"
            android:layout_width="381dp"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/PKGDispResAddrText"
            android:layout_width="381dp"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/PKGBuyerLeftToPayText"
            android:layout_width="381dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/PKGSellerLeftToPayText"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/PKGCarrierLeftToPayText"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/PKGShippingFeeText"
            android:layout_width="381dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/PKGMerchValText"
            android:layout_width="381dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/PKGStateText"
            android:layout_width="381dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/DebugMyPkgsText"
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/AddPkgBt"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add package" />

    <AutoCompleteTextView
        android:id="@+id/MyPkgsAddrText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Package address"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

</LinearLayout>
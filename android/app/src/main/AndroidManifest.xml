<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chaimovy.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:usesCleartextTraffic="true" -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivityBuyerSeller"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login_buyer_seller"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivityDeliveryCompany"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login_delivery_company"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActionMenu"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CarrierActionMenu"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignPackage"
            android:configChanges="orientation|keyboardHidden"
            android:label="Sign Package"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddDeliveryGuy"
            android:configChanges="orientation|keyboardHidden"
            android:label="Add Carrier"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyPackages"
            android:configChanges="orientation|keyboardHidden"
            android:label="My Packages"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OpenDispute"
            android:configChanges="orientation|keyboardHidden"
            android:label="Open Dispute"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreatePackage"
            android:configChanges="orientation|keyboardHidden"
            android:label="Create Package"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ReturnPackage"
            android:configChanges="orientation|keyboardHidden"
            android:label="Return Package"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation"/>
        <activity
            android:name=".SendFunds"
            android:configChanges="orientation|keyboardHidden"
            android:label="Send Funds"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SolveDispute"
            android:configChanges="orientation|keyboardHidden"
            android:label="Solve Dispute"
            android:screenOrientation="portrait" />
    </application>

</manifest>